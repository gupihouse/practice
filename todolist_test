<body>
  <div class="todo-container">
    <h1>üìù ÏùºÏ†ï Í¥ÄÎ¶¨</h1>
    <input type="text" id="todoInput" placeholder="Ìï† ÏùºÏùÑ ÏûÖÎ†•ÌïòÏÑ∏Ïöî" />
    <button onclick="addTodo()">Ï∂îÍ∞Ä</button>
    <ul id="todoList"></ul>
  </div>

  <script>
    function addTodo() {
      const input = document.getElementById("todoInput");
      const text = input.value.trim();
      if (text === "") return;

      const li = document.createElement("li");
      li.innerHTML = `
        <span onclick="toggleComplete(this)">${text}</span>
        <button onclick="deleteTodo(this)">ÏÇ≠Ï†ú</button>
      `;
      document.getElementById("todoList").appendChild(li);
      input.value = "";
    }

    function toggleComplete(el) {
      el.classList.toggle("completed");
    }

    function deleteTodo(button) {
      const li = button.parentElement;
      li.remove();
    }
  </script>
</body>
